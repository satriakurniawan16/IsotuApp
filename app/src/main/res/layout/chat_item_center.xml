<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:padding="8dp"
    android:layout_height="wrap_content">


    <de.hdodenhof.circleimageview.CircleImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:visibility="gone"
        android:id="@+id/profile_image"
        android:src="@mipmap/ic_launcher"/>


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:id="@+id/name_user"
        android:text="Rahmad"
        android:visibility="gone"
        android:layout_toRightOf="@id/profile_image"
        android:textColor="#000"/>

    <LinearLayout
        android:layout_centerInParent="true"
        android:id="@+id/messageLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_toRightOf="@id/profile_image"
        android:layout_below="@+id/name_user"
        android:layout_marginLeft="5dp"
        android:gravity="center"
        android:background="@drawable/background_center"
        >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_margin="5dp"
            android:visibility="gone"
            android:id="@+id/status_share"
            android:text="dibagikan"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="hello"
            android:layout_marginLeft="10dp"
            android:layout_marginRight="10dp"
            android:id="@+id/show_message"
            android:textSize="12sp"
            android:padding="8dp"
            />

        <ImageView
            android:id="@+id/imageShare"
            android:layout_width="180dp"
            android:layout_height="120dp"
            android:visibility="gone"
            android:layout_margin="30dp"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rahmad Satria Kurniawan"
            android:id="@+id/user_share"
            android:textSize="18sp"
            android:padding="8dp"
            android:visibility="gone"
            />

    </LinearLayout>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/txt_seen"
        android:visibility="gone"
        android:layout_below="@id/messageLayout"/>


</RelativeLayout>